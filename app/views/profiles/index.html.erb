<div class="page-header">
  Users
</div>
<table class="table table-striped">
  <% @profile_users.each do |user| %>
      <tr>
        <td>
          <%= image_tag gravatar_url(user, :big_icon), alt: user.name, title: user.name %>
        </td>
        <td>
          <%= link_to user.name, user %>
        </td>
        <td>
          @<%= user.initials %>
        </td>
      </tr>
  <% end %>
</table>