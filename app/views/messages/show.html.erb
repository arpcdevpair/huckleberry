<div class="row-fluid">
  <div class="span5">
    Sender:
    <% @message.senders.map(&:user).each do |user| %>  
    <div class="row-fluid">
      <div class="span1">
        <%= image_tag gravatar_url(user, :tiny), alt: user.name, title: user.name %>
      </div>
      <div class="span6">
        <%=user.name%>
      </div>
    </div>
    <% end %>
  </div>
  <div class="span7">
    Recipient:
    <% @message.recipients.map(&:user).each do |user| %>  
    <div class="row-fluid">
      <div class="span1">
        <%= image_tag gravatar_url(user, :tiny), alt: user.name, title: user.name %>
      </div>
      <div class="span6">
        <%=user.name%>
      </div>
    </div>
    <% end %>
  </div>    
</div>
<div class="row-fluid">
  <div class="span12">
    <%= to_html(@message).html_safe %>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <b>Created</b>
    <%= @message.created_at.strftime '%B %-d, %Y' %>
  </div>
</div>